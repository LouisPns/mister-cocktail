<h3>Liste des cocktails </h3>
<% @cocktails.each do |cocktail| %>
<ol>
  <%= link_to cocktail.name, cocktail_path(cocktail) %>

  <%= link_to "Delete", cocktail_path(cocktail),
  method: :delete,
  data: { confirm: "Are you sure?" }  %>
</ol>
<% end %>


